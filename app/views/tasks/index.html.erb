<h1>My tasks</h1>
<ul><% @tasks.each do |task| %>
  <li><input type="checkbox" value="<%= task.title %>">
      <%= link_to task.title, task_path(task) %>
      <%= button_to "Delete", task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %>
  </li>
  <% end %>
</ul>

<%= link_to "Add a new task" , new_task_path %>
