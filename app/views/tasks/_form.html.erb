<%= form_with(model: @task, url: url, method: method) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>

  <% if show_completed_field %>
    <div>
      <%= form.label :completed %>
      <%= form.check_box :completed %>
    </div>
  <% end %>

  <%= form.submit button_text %>
<% end %>
